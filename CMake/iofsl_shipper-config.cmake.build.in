#-----------------------------------------------------------------------------
# Config file for compiling against the build directory
#-----------------------------------------------------------------------------
get_filename_component(SELF_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)

#-----------------------------------------------------------------------------
# User Options
#-----------------------------------------------------------------------------
set(IOFSL_SHIPPER_USE_BOOST_PP @IOFSL_SHIPPER_USE_BOOST_PP@)

#-----------------------------------------------------------------------------
# Directories
#-----------------------------------------------------------------------------
set(IOFSL_SHIPPER_INCLUDE_DIR "@IOFSL_SHIPPER_INCLUDES_BUILD_TIME@")

#-----------------------------------------------------------------------------
# Version Strings
#-----------------------------------------------------------------------------
set(IOFSL_SHIPPER_VERSION_STRING  @IOFSL_SHIPPER_PACKAGE_VERSION@)
set(IOFSL_SHIPPER_VERSION_MAJOR   @IOFSL_SHIPPER_VERSION_MAJOR@)
set(IOFSL_SHIPPER_VERSION_MINOR   @IOFSL_SHIPPER_VERSION_MINOR@)
set(IOFSL_SHIPPER_VERSION_PATCH   @IOFSL_SHIPPER_VERSION_PATCH@)

#-----------------------------------------------------------------------------
# Don't include targets if this file is being picked up by another
# project which has already build IOFSL_SHIPPER as a subproject
#-----------------------------------------------------------------------------
if(NOT TARGET "IOFSL_SHIPPER" AND NOT IOFSL_SHIPPER_INSTALL_SKIP_TARGETS)
  include(${SELF_DIR}/iofsl_shipper-targets.cmake)
endif(NOT TARGET "IOFSL_SHIPPER" AND NOT IOFSL_SHIPPER_INSTALL_SKIP_TARGETS)

